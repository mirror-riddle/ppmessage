<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <!-- android:background="@drawable/pp_icon_text_chat_right_bubble" -->

    <TextView
        android:id="@+id/pp_chat_item_text_by_user_message_body"
        style="@style/pp_chat_item_right_bubble_bg_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="@string/pp_chat_item_text_body"
        android:textColor="@color/pp_conversations_item_right_text_color"
        android:clickable="true"
        android:textSize="@dimen/pp_chat_item_text_size" />

    <include
        android:id="@+id/pp_chat_item_text_by_user_message_extra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        layout="@layout/pp_chat_item_extra" />

</LinearLayout>