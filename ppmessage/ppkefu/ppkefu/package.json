{
  "name": "PPMessage",
  "version": "1.1.1",
  "description": "PPMessage: An Ionic project",
  "main": "www/main.js",
  "scripts": {
    "start": "electron www/main.js",
    "dev": "electron ./www",
    "clean": "rm -rf ./electron/dist",
    "clean:osx": "sudo rm -rf ./electron/dist/osx",
    "clean:mas": "sudo rm -rf ./electron/dist/mas",
    "clean:win32": "rm -rf ./electron/dist/win32",
    "clean:win64": "rm -rf ./electron/dist/win64",
    "clean:linux": "rm -rf ./electron/dist/linux",
    "build": "npm run clean && npm run build:osx && npm run build:win32 && npm run build:win64 && npm run build:linux",
    "build:osx": "npm run clean:osx && electron-packager ./www \"PPMessage\" --out=electron/dist/osx --platform=darwin --arch=x64 --version=0.35.6 --app-version=$npm_package_version --build-version=$npm_package_version --icon=electron/assets/osx/ppmessage.icns --asar=true --overwrite",
    "build:mas": "npm run clean:mas && electron-packager ./www \"PPMessage\" --out=electron/dist/mas --platform=mas --arch=x64 --version=0.35.6 --app-version=$npm_package_version --build-version=$npm_package_version --icon=electron/assets/osx/ppmessage.icns --asar=true --overwrite --app-bundle-id=com.ppmessage.ppkefu.mac --helper-bundle-id=com.ppmessage.ppkefu.mac.helper --osx-sign.identity=\"3rd Party Mac Developer Application: Beijing Yourui Technology Co., Ltd. (2WSQ489AT3)\" --osx-sign.entitlements=electron/sign-mac-app/parent.plist --osx-sign.entitlements-inherit=electron/sign-mac-app/child.plist",
    "build:win32": "npm run clean:win32 && electron-packager ./www \"PPMessage-win32\" --out=electron/dist/win32 --platform=win32 --arch=ia32 --version=0.35.6 --app-version=$npm_package_version --build-version=$npm_package_version --icon=electron/assets/win/ppmessage.ico --asar=true --overwrite",
    "build:win64": "npm run clean:win64 && electron-packager ./www \"PPMessage-win64\" --out=electron/dist/win64 --platform=win32 --arch=x64 --version=0.35.6 --app-version=$npm_package_version --build-version=$npm_package_version --icon=electron/assets/win/ppmessage.ico --asar=true --overwrite",
    "build:linux": "npm run clean:linux && electron-packager ./www \"PPMessage\" --out=electron/dist/linux --platform=linux --arch=x64 --version=0.35.6 --app-version=$npm_package_version --build-version=$npm_package_version --asar=true --overwrite",
    "pack": "npm run pack:osx && npm run pack:win && npm run pack:win64 && npm run pack:linux",
    "pack:osx": "npm run build:osx && electron-builder \"electron/dist/osx/PPMessage-darwin-x64/PPMessage.app\" --platform=osx --out=\"electron/dist/osx\" --config=electron/config.json",
    "pack:win32": "npm run build:win32 && electron-builder \"electron/dist/win32/PPMessage-win32-win32-ia32\" --platform=win --out=\"electron/dist/win32\" --config=electron/config-win32.json",
    "pack:win64": "npm run build:win64 && electron-builder \"electron/dist/win64/PPMessage-win64-win32-x64\" --platform=win --out=\"electron/dist/win64\" --config=electron/config-win64.json",
    "pack:linux": "npm run build:linux && electron-builder \"electron/dist/linux/PPMessage-linux-x64\" --platform=linux --out=\"electron/dist/linux\" --config=electron/config.json",
    "sign:mas": "npm run build:mas && cd electron/sign-mac-app && bash installer.sh"
  },
  "dependencies": {
    "electron-packager": "^6.0.1",
    "get-gulp-args": "^0.0.1",
    "gulp": "^3.5.6",
    "gulp-angular-templatecache": "^1.8.0",
    "gulp-concat": "^2.6.0",
    "gulp-jslint": "^0.2.2",
    "gulp-minify-css": "^0.3.0",
    "gulp-rename": "^1.2.0",
    "gulp-replace": "^0.5.4",
    "gulp-sass": "^2.0.4",
    "gulp-uglify": "^1.4.2",
    "gulp-util": "^3.0.7",
    "xml2json": "^0.9.0"
  },
  "devDependencies": {
    "bower": "^1.3.3",
    "electron-builder": "^3.0.1",
    "electron-prebuilt": "0.35.6",
    "shelljs": "^0.3.0"
  },
  "cordovaPlugins": [
    "cordova-plugin-crosswalk-webview",
    "cordova-plugin-whitelist",
    "cordova-plugin-statusbar",
    "cordova-plugin-contacts",
    "cordova-plugin-console",
    "cordova-plugin-splashscreen",
    "cordova-plugin-inappbrowser",
    "cordova-plugin-file",
    "cordova-plugin-file-transfer",
    "cordova-plugin-media-capture",
    "cordova-plugin-network-information",
    "cordova-plugin-dialogs",
    "cordova-plugin-geolocation",
    "cordova-plugin-vibration",
    "cordova-plugin-device-orientation",
    "cordova-plugin-device-motion",
    "cordova-plugin-device-name",
    "cordova-plugin-device",
    "cordova-plugin-camera",
    "cordova-open",
    "cordova-plugin-app-version",
    "ionic-plugin-keyboard",
    {
      "locator": "https://github.com/PPMESSAGE/cordova-plugin-mqtt.git",
      "id": "cordova-plugin-mqtt"
    },
    {
      "variables": {
        "SENDER_ID": "878558045932"
      },
      "locator": "phonegap-plugin-push",
      "id": "phonegap-plugin-push"
    },
    {
      "locator": "https://github.com/dingguijin/org.devgeeks.Canvas2ImagePlugin.git",
      "id": "org.devgeeks.Canvas2ImagePlugin"
    },
    {
      "locator": "https://github.com/dingguijin/cordova-plugin-globalization.git",
      "id": "cordova-plugin-globalization"
    },
    {
      "locator": "https://github.com/dingguijin/cordova-plugin-media.git",
      "id": "org.apache.cordova.media"
    },
    {
      "locator": "https://github.com/EddyVerbruggen/Toast-PhoneGap-Plugin.git",
      "id": "cordova-plugin-x-toast"
    },
    {
      "locator": "https://github.com/VersoSolutions/CordovaClipboard.git",
      "id": "com.verso.cordova.clipboard"
    },
    {
      "locator": "https://github.com/brodysoft/Cordova-SQLitePlugin.git",
      "id": "cordova-sqlite-storage"
    },
    {
      "locator": "https://github.com/keensoft/FullScreenImage-Cordova-Plugin.git",
      "id": "es.keensoft.fullscreenimage"
    }
  ],
  "cordovaPlatforms": [
    "ios",
    "android"
  ]
}
